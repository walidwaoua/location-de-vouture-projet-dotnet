@page
@model RegisterModel
@{
    ViewData["Title"] = "Créer un compte";
}
<h1>Créer un compte</h1>
<form method="post">
    <div class="mb-3">
        <label asp-for="NomUtilisateur" class="form-label"></label>
        <input asp-for="NomUtilisateur" class="form-control" />
        <span asp-validation-for="NomUtilisateur" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="MotDePasse" class="form-label"></label>
        <input asp-for="MotDePasse" type="password" class="form-control" />
        <span asp-validation-for="MotDePasse" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Client.Nom" class="form-label"></label>
        <input asp-for="Client.Nom" class="form-control" />
        <span asp-validation-for="Client.Nom" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Client.Prenom" class="form-label"></label>
        <input asp-for="Client.Prenom" class="form-control" />
        <span asp-validation-for="Client.Prenom" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Client.Adresse" class="form-label"></label>
        <input asp-for="Client.Adresse" class="form-control" />
        <span asp-validation-for="Client.Adresse" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Client.Age" class="form-label"></label>
        <input asp-for="Client.Age" class="form-control" />
        <span asp-validation-for="Client.Age" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Client.NumeroPermis" class="form-label"></label>
        <input asp-for="Client.NumeroPermis" class="form-control" />
        <span asp-validation-for="Client.NumeroPermis" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Client.CIN" class="form-label"></label>
        <input asp-for="Client.CIN" class="form-control" />
        <span asp-validation-for="Client.CIN" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Créer</button>
    <a asp-page="/Index" class="btn btn-secondary">Annuler</a>
</form>
