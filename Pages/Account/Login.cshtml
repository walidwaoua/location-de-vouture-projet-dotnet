@page
@model LocationVoiture.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Se connecter";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <h1 class="h3 mb-3 text-center">Connexion</h1>
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <form method="post" class="needs-validation" novalidate>
                        <input type="hidden" asp-for="ReturnUrl" />
                        <div class="mb-3">
                            <label asp-for="NomUtilisateur" class="form-label"></label>
                            <input asp-for="NomUtilisateur" class="form-control form-control-lg" />
                            <span asp-validation-for="NomUtilisateur" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="MotDePasse" class="form-label"></label>
                            <input asp-for="MotDePasse" type="password" class="form-control form-control-lg" />
                            <span asp-validation-for="MotDePasse" class="text-danger"></span>
                        </div>
                        <div class="d-flex align-items-center justify-content-between">
                            <button type="submit" class="btn btn-primary px-4">Se connecter</button>
                            <a asp-page="/Account/Register" class="btn btn-link">Créer un compte</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
