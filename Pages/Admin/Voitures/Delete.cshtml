@page "{id:int}"
@using LocationVoiture.Pages.Admin.Voitures
@model AdminVoitureDeleteModel
@{
    ViewData["Title"] = "Supprimer la voiture";
}

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-exclamation-triangle me-2" viewBox="0 0 16 16">
                            <path d="M7.938 2.016A.13.13 0 0 1 8.002 2a.13.13 0 0 1 .063.016.146.146 0 0 1 .054.057l6.857 11.667c.036.06.035.124.002.183a.163.163 0 0 1-.054.06.116.116 0 0 1-.066.017H1.146a.115.115 0 0 1-.066-.017.163.163 0 0 1-.054-.06.176.176 0 0 1 .002-.183L7.884 2.073a.147.147 0 0 1 .054-.057zm1.044-.45a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566z" />
                            <path d="M7.002 12a1 1 0 1 1 2 0 1 1 0 0 1-2 0zM7.1 5.995a.905.905 0 1 1 1.8 0l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995z" />
                        </svg>
                        Confirmer la suppression
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <strong>Attention !</strong> Êtes-vous sûr de vouloir supprimer cette voiture ? Cette action est irréversible.
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <img src="@(Model.Voiture.ImageUrl ?? "https://via.placeholder.com/300x200?text=Voiture")"
                                 class="img-fluid rounded"
                                 alt="@Model.Voiture.Marque @Model.Voiture.Modele">
                        </div>
                        <div class="col-md-8">
                            <h5 class="mb-3">@Model.Voiture.Marque @Model.Voiture.Modele</h5>
                            <dl class="row mb-0">
                                <dt class="col-sm-4">Matricule</dt>
                                <dd class="col-sm-8"><code>@Model.Voiture.Matricule</code></dd>

                                <dt class="col-sm-4">Prix par jour</dt>
                                <dd class="col-sm-8"><strong class="text-primary">@Model.Voiture.PrixParJour.ToString("C")</strong></dd>

                                <dt class="col-sm-4">Description</dt>
                                <dd class="col-sm-8">@(Model.Voiture.Description ?? "Aucune description")</dd>

                                <dt class="col-sm-4">Statut</dt>
                                <dd class="col-sm-8">
                                    @if (Model.Voiture.Disponible)
                                    {
                                        <span class="badge bg-success">Disponible</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Indisponible</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-light">
                    <form method="post">
                        <input type="hidden" asp-for="Voiture.Id" />
                        <div class="d-flex justify-content-between">
                            <a asp-page="Index" class="btn btn-secondary">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-lg me-1" viewBox="0 0 16 16">
                                    <path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8 2.146 2.854Z" />
                                </svg>
                                Annuler
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash me-1" viewBox="0 0 16 16">
                                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z" />
                                    <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z" />
                                </svg>
                                Confirmer la suppression
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>