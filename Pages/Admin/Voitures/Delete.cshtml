@page "{id:int}"
@model AdminVoitureDeleteModel
@{
    ViewData["Title"] = "Supprimer la voiture";
}
<h1>Supprimer la voiture</h1>
<div class="alert alert-warning">Êtes-vous sûr de vouloir supprimer cette voiture ?</div>
<form method="post">
    <input type="hidden" asp-for="Voiture.Id" />
    <p><strong>@Model.Voiture.Marque @Model.Voiture.Modele</strong> (@Model.Voiture.Matricule)</p>
    <button type="submit" class="btn btn-danger">Supprimer</button>
    <a asp-page="Index" class="btn btn-secondary">Annuler</a>
</form>
