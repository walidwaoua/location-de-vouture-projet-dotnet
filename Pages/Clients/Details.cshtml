@page "{id:int}"
@using LocationVoiture.Pages.Clients
@model ClientDetailsModel
@{
    ViewData["Title"] = "Profil client";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-9">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <div>
                            <h1 class="h4 mb-1">Profil client</h1>
                            <p class="text-muted mb-0">Informations personnelles</p>
                        </div>
                        <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width:56px; height:56px;">
                            <span class="fw-bold text-uppercase">@Model.Client.Prenom?.FirstOrDefault()@Model.Client.Nom?.FirstOrDefault()</span>
                        </div>
                    </div>
                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-muted">Nom</dt>
                        <dd class="col-sm-8 fw-semibold">@Model.Client.Nom</dd>

                        <dt class="col-sm-4 text-muted">Prénom</dt>
                        <dd class="col-sm-8 fw-semibold">@Model.Client.Prenom</dd>

                        <dt class="col-sm-4 text-muted">Adresse</dt>
                        <dd class="col-sm-8">@Model.Client.Adresse</dd>

                        <dt class="col-sm-4 text-muted">Âge</dt>
                        <dd class="col-sm-8">@Model.Client.Age</dd>

                        <dt class="col-sm-4 text-muted">Numéro de permis</dt>
                        <dd class="col-sm-8"><code>@Model.Client.NumeroPermis</code></dd>

                        <dt class="col-sm-4 text-muted">CIN</dt>
                        <dd class="col-sm-8"><code>@Model.Client.CIN</code></dd>
                    </dl>
                    <div class="d-flex gap-2 justify-content-end mt-4">
                        <a asp-page="Edit" asp-route-id="@Model.Client.Id" class="btn btn-primary">Modifier</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
