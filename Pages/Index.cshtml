@page
@model LocationVoiture.Pages.IndexModel
@{
    ViewData["Title"] = "Accueil";
}

<div class="hero-section text-center py-5 bg-light">
    <div class="container">
        <h1 class="display-4 fw-bold mb-4">Bienvenue chez LocationVoiture</h1>
